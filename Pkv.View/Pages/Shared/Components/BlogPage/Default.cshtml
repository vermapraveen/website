@using Westwind.AspNetCore.Markdown;

@inject Pkv.Common.IDebugInfoHelper debugInfoHelper
@model Pkv.View.Pages.Shared.ViewModels.BlogDataViewModel

@{
    var traceRef = debugInfoHelper.Start("BlogPageVc.BlogIntroVc");
}
@await Component.InvokeAsync("BlogIntro", new Pkv.View.Models.BlogIntroModel
{ title = Model.BlogIntro.Title, slug = Model.BlogIntro.Slug, tags = Model.BlogIntro.GetTags, intro = Model.BlogIntro.Intro })

@{
    debugInfoHelper.End(traceRef);
}

@{
    var traceRef1 = debugInfoHelper.Start("BlogPageVc.ParseHtmlString");
}
@Markdown.ParseHtmlString(Model.BlogContent)
@{
    debugInfoHelper.End(traceRef1);
}